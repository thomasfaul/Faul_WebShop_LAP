@model CardGame.Web.Models.Statistic

@{
    ViewBag.Title = "Statistics";
}


<div class="container fullcontainer">
    <div class="col-lg-1 categorylinks">
        <h3 id="lefthead">Game Statistics</h3>
        <div>
            <a href="#" class="btn btn-default buttonleftnav">Button1</a>
            <a href="#" class="btn btn-default buttonleftnav">Button2 </a>
        </div>
    </div>
    <div class="col-md-9 mainright stats">
        <h3>User angemeldet:</h3>
        <p>
            @Html.DisplayName("User:")
            @Html.DisplayFor(s => s.NumUsers)
        </p>
        <br />
        <h3>Karten insgesamt:</h3>
        <p>
            @Html.DisplayName("Karten:")
            @Html.DisplayFor(s => s.NumCards)
        </p>
        <br />
        <h3>Erstellte Decks:</h3>
        <p>
            @Html.DisplayName("Decks:")
            @Html.DisplayFor(s => s.NumDecks)
        </p>
        <br />
        <h3>Veröffentlicht am</h3>
        <p>
            @Html.DisplayName("Datum:")
            @Html.DisplayFor(s => s.CreationTime)
        </p>
    </div>
</div>