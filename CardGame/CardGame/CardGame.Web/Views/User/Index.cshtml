@model IEnumerable<CardGame.Web.Models.UI.Register>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>



@{ var currencybalance = SessionHelper.Get<int>("Currencybalance");}
<div class="col-md-3">

    <div class="col col-md-12 adtopleft">
        <h3>Stöbern</h3>
