@using CardGame.Web.Models
@using CardGame.Web.m

@model CardPack
@{
    ViewBag.Title = "BuyCardPack";
}

@*-------------------------------------------------------LEFTBAR AD--------------------------------------------*@
<div class="col-md-3">
    @Html.Partial("_Advertisment")

    @*-----------------------------------------------------LEFTBAR Banner-----------------------------------------*@

    @Html.Partial("_BannerAd")

    @*-----------------------------------------------------LEFTBAR CURRENCY-----------------------------------------*@

    @Html.Partial("_Money");

</div>
@*-----------------------------------------------------MAINCOLUMN---------------------------------------  ------*@

<div class="col-md-6 cardcol">

    <h2>@Model.PackName</h2>

    @Html.DisplayNameFor(cp => cp.NumCards):
    @Html.DisplayFor(cp => cp.NumCards)
    <br />
    @Html.DisplayNameFor(cp => cp.PackPrice):
    @Html.DisplayFor(cp => cp.PackPrice)
    <br />
    Price per Card:
    @((double)Model.PackPrice / Model.NumCards)
    <br />
    <br />
    @using (Html.BeginForm())
    {
        <div>
            Amount: <input type="text" name="numPacks" class="text-right" />
        </div>
        <div>
            <input type="submit" value="Buy Pack(s)" class="btn btn-default" />
        </div>
    }
  </div>



    @*-----------------------------------------------------RIGHTBAR TOP---------------------------------------------*@
    <div class="col-md-3">
        <div class="col col-md-12 ">
            <h3>Coins einlösen</h3>
            <p>
                Lege dir Cardpacks zu und statte deine Kartendecks aus
            </p>
            <a href="/CardPack/DisableCurrency" class="btn btn-default buttonleftnav">Buy Cardpacks</a>
        </div>
        @*-----------------------------------------------------RIGHTBAR Middle------------------------------------------*@
        <div class="col col-md-12">
            <h3>Kaufe Coins</h3>
            <p>und du kannst damit Cardpacks erstehen</p>
            <a href="/CardPack/EnableCurrency" class="btn btn-default buttonleftnav">Buy Gold </a>
        </div>
        @*-------------------------------------------------RIGHTBAR BOTTOM-----------------------------------------*@
        <div class="col col-md-12">
            <h3 id="pagingOverview">weitere Seiten: </h3>
            <p class="pageLinks">@Html.PageLinks(Model.PagingInfo, x => Url.Action("PackOverview", new { page = x }))</p>
        </div>
    </div>

