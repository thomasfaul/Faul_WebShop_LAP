@using CardGame.Web.Models.DB


@model Shop
@{
    ViewBag.Title = "Shop";
}

h1>Welcome to the Shop!</h1>

<h2>Available Card Packs</h2>

<table>
    <thead>
        <tr>
            <td>
                Pack Name
            </td>
            @foreach (var cp in @Model.CardPacks)
            {
                <td>
                    @Html.DisplayFor(cardpack => cp.PackName)
                </td>
            }
        </tr>
    </thead>
    <tr>
        <td>
            # Cards
        </td>
        @foreach (var cp in @Model.CardPacks)
        {
            <td>
                @Html.DisplayFor(cardpack => cp.NumCards)
            </td>
        }
    </tr>
    <tr>
        <td>
            Price
        </td>
        @foreach (var cp in @Model.CardPacks)
        {
            <td>
                @Html.DisplayFor(cardpack => cp.PackPrice)
            </td>
        }
    </tr>
    <tr>
        <td></td>
        @foreach (var cp in @Model.CardPacks)
        {
            <td>
                @Html.ActionLink("Buy", "BuyCardPack", new { id = cp.IdPack})
            </td>
        }
    </tr>
</table>


