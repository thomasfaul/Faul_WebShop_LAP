@using CardGame.Web.Models.DB
@model Order
@{
    ViewBag.Title = "OrderOverview";
}

<h2>OrderOverview</h2>
@using (Html.BeginForm())
{
    <div>
        You want to buy @Model.Quantity @Model.Pack.PackName packs
    </div>

    <div>
        Current Balance: @Model.CurrencyBalance
        Total Cost: @Model.Quantity x @Model.Pack.PackPrice = @(Model.Quantity * Model.Pack.PackPrice)
        New Balance: @(@Model.CurrencyBalance - Model.Quantity * Model.Pack.PackPrice)
    </div>
    <div>
        <input type="submit" value="Buy Pack(s)" class="btn btn-default" />
    </div>
}
