@model CardGame.Web.Models.User
@{
    ViewBag.Title = "Register";
}


<div id="fullcontainer" class="container fullcontainer">
    <div class="col-lg-1 categorylinks">
        <h2 id="lefthead">Register</h2>
        <div>
            <a href="#" class="btn btn-default buttonleftnav">Button1</a>
            <a href="#" class="btn btn-default buttonleftnav">Button2 </a>
        </div>
    </div>

    <div class="col-lg-6  mainright ">

        @using (Html.BeginForm())
        {
            <fieldset>
                <legend></legend>
                <ol>
                    <li>

                        @Html.LabelFor(u => u.Firstname)
                        @Html.TextBoxFor(u => u.Firstname, new { maxlength = 50 })
                        @Html.ValidationMessageFor(model => model.Firstname)
                    </li>
                    <li>
                        @Html.LabelFor(u => u.Lastname)
                        @Html.EditorFor(u => u.Lastname, new { maxlength = 50 })
                        @Html.ValidationMessageFor(model => model.Lastname)
                    </li>
                    <li>
                        @Html.LabelFor(u => u.Gamertag)
                        @Html.EditorFor(u => u.Gamertag, new { maxlength = 50 })
                        @Html.ValidationMessageFor(model => model.Gamertag)
                    </li>
                    <li>
                        @Html.LabelFor(u => u.Email)
                        @Html.EditorFor(u => u.Email)
                        @Html.ValidationMessageFor(u => u.Email)
                    </li>
                    <li>
                        @Html.LabelFor(u => u.Passwort)
                        @Html.PasswordFor(u => u.Passwort, new { maxlength = 50, value = ViewBag.Selpwd })
                        @Html.ValidationMessageFor(u => u.Passwort)
                    </li>
                    <li>
                        @Html.LabelFor(u => u.ConfirmPassword)
                        @Html.EditorFor(u => u.ConfirmPassword, new { maxlength = 50, value = ViewBag.Selconfirmpwd })
                        @Html.ValidationMessageFor(u => u.PasswordValidation)
                    </li>
                    <li>
                        @Html.CheckBoxFor(m => m.TermsAccepted) I accept the terms & conditions
                        @Html.ValidationMessageFor(m => m.TermsAccepted)
                    </li>
                </ol>
                <input type="submit" value="Register" class="btn btn-default submitbutton" />

            </fieldset>
        }
    </div>
</div>
            














