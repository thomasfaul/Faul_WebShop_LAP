@*-----------------------------------------------------MAINCOLUMN---------------------------------------  ------*@
<div class="col col-md-6 cardcol">
    <h3>Registrierung</h3>
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend></legend>
            <ul>
                <li>
                    <p>
                        @Html.LabelFor(u => u.Firstname)
                        @Html.TextBoxFor(u => u.Firstname, new { maxlength = 50 })
                    </p>
                </li>
                <li>
                    @Html.ValidationMessageFor(model => model.Firstname)
                </li>
                <li>
                    <p>
                        @Html.LabelFor(u => u.Lastname)
                        @Html.EditorFor(u => u.Lastname, new { maxlength = 50 })
                    </p>
                    @Html.ValidationMessageFor(model => model.Lastname)
                </li>
                <li>
                    <p>
                        @Html.LabelFor(u => u.Gamertag)
                        @Html.EditorFor(u => u.Gamertag, new { maxlength = 50 })
                    </p>
                    @Html.ValidationMessageFor(model => model.Gamertag)
                </li>
                <li>
                    <p>
                        @Html.LabelFor(u => u.Email)
                        @Html.EditorFor(u => u.Email)
                    </p>
                    @Html.ValidationMessageFor(u => u.Email)
                </li>
                <li>
                    <p>
                        @Html.LabelFor(u => u.Passwort)
                        @Html.PasswordFor(u => u.Passwort, new { maxlength = 50, value = ViewBag.Selpwd })
                    </p>
                    @Html.ValidationMessageFor(u => u.Passwort)
                </li>
                <li>
                    <p>
                        @Html.LabelFor(u => u.ConfirmPassword)
                        @Html.EditorFor(u => u.ConfirmPassword, new { maxlength = 50, value = ViewBag.Selconfirmpwd })
                    </p>
                    @*@Html.ValidationMessageFor(u => u.PasswordValidation)*@
                </li>
                <li>
                    <a class="readAGB " href="@Url.Action("Contact", "Home")">Ich habe die AGB´s gelesen und akzeptiert </a>
                </li>
                <li>
                    <div>@Html.CheckBoxFor(m => m.TermsAccepted)</div>
                    @Html.ValidationMessageFor(m => m.TermsAccepted)
                </li>
                <li><input type="submit" value="Registrieren" class="btn btn-default regButtonreg" /></li>
            </ul>

        </fieldset>
    }
    <br />
</div>
@*-----------------------------------------------------RIGHTBAR TOP---------------------------------------------*@
<div class="col-md-3">
    <div class="col col-md-12">
        <h3>Stöbern</h3>
        <p>
            Stöbere durch unsere Kartensammlung und schaue dir die neuesten Karten an
        </p>
        @{if (User.IsInRole("player") || User.IsInRole("admin"))
            {
            <a class="btn btn-default" href="@Url.Action("Overview", "Card")">Zu den Decks</a> 
            }
         }
     </div>
@*-----------------------------------------------------RIGHTBAR Middle------------------------------------------*@
    <div class="col col-md-12">
        <h3>Stelle deine Decks zusammen</h3>
        <p>Durchsuche deine Kartensammlung und stelle deine, persönlichen Decks zusammen</p>
        @if (User.IsInRole("admin") || User.IsInRole("player"))
        {
            <a class="btn btn-default" href="@Url.Action("Overview", "Card")">Zu den Karten</a>
        }
    </div>

@*-----------------------------------------------------RIGHTBAR BOTTOM-----------------------------------------*@
    <div class="col col-md-12">
        <h3>Registriere dich </h3>
        <p>Hier kannst du dich registrieren, damit du dich einloggen kannst</p>
        <a class="btn btn-default" href="@Url.Action("Register", "Account")">Registrieren</a>
    </div>
</div>

