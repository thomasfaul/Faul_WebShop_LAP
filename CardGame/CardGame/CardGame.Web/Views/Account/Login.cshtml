@model CardGame.Web.Models.User

@{
    ViewBag.Title = "Login";
}

<div id="fullcontainer" class="container fullcontainer">
    <div class="col-lg-1 categorylinks" >
        <h2 id="lefthead">About</h2>
        <div>
            <a href="#" class="btn btn-default buttonleftnav">Button1</a>
            <a href="#" class="btn btn-default buttonleftnav">Button2 </a>
        </div>
    </div>

    <div class="col-lg-6  mainright ">

    <div class="form-horizontal">
             <h3>Login</h3>
              <div class="form-group col-lg-12">
                @Html.ValidationSummary(true, "", new { @class = "text-danger summarydanger" })
                @Html.LabelFor(u => u.Email, htmlAttributes: new { @class = "control-label label" })
                @Html.EditorFor(u => u.Email, new { htmlAttributes = new { @class = "form-control field" } })
                @Html.ValidationMessageFor(u => u.Email, "", new { @class = "text-danger danger" })
            </div>
            <br />
            <div class="form-group col-lg-12">
                @Html.LabelFor(u => u.Password, htmlAttributes: new { @class = "control-label label" })
                @Html.EditorFor(u => u.Password, new { htmlAttributes = new { @class = "form-control field" } })
                @Html.ValidationMessageFor(u => u.Password, "", new { @class = "text-danger danger" })
            </div>
            <div class="col-lg-12 submitpanel">
            <input type="submit" value="Login" class="btn btn-default submitbutton" />
           @Html.ActionLink("Register", "Register", "Account", htmlAttributes:new {@class="btn btn-default" })
            </div>
        </div>  
      </div>  
</div>
