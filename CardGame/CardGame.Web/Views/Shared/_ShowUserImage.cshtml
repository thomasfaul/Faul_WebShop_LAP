
@using CardGame.Web.Models.UI;

@model EditUserInfo


@if (@Model.Pic != null)
{
    var base64 = Convert.ToBase64String(@Model.Pic);
    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
    <img class="cardpic img-rounded" src="@imgSrc" />
}
else
{
    <div class="form-control-static">Noch kein Bild vorhanden</div>

    <img class="cardpic im-rounded" src="~/Content/images/Cardpacks/2.png" style="max-height:14em" />

}