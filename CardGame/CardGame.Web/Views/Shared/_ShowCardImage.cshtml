@using CardGame.Web.Models;

@model CardPack


@if (@Model.Pic != null)
{
    var base64 = Convert.ToBase64String(@Model.Pic);
    var imgSrc = String.Format("data:image/png;base64,{0}", base64);
    <img class="cardpic img-rounded " src="@imgSrc" style="margin-top:2em"/>
}
else
{
    <div class="form-control-static">Noch kein Bild vorhanden</div>
    <img class="cardpic im-rounded" src="~/Content/images/Cardpacks/2.png" style="max-height:18em" />

}
