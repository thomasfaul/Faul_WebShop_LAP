@using CardGame.Web.Models

@model IEnumerable<Card>
@{
    ViewBag.Title = "_CardTable";
}
<div class="col col-md-12 showcont">
    <h3>Tabellenübersicht</h3>
    <table class="table showtable">
        <tr class="showtr">
            <th class="showth">
                @Html.DisplayNameFor(c => c.Name)
            </th>
            <th class="showth">
                @Html.DisplayNameFor(c => c.Type)
            </th>
            <th class="showth">
                @Html.DisplayNameFor(c => c.Mana)
            </th>
            <th class="showth">
                @Html.DisplayNameFor(c => c.Attack)
            </th>
            <th class="showth" >
                @Html.DisplayNameFor(c => c.Life)
            </th>
        </tr>

        @foreach (var card in Model)
        {
            <tr class="showtr">
                <th class="showth">
                    @Html.DisplayFor(c => card.Name)
                </th>
                <th class="showth">
                    @Html.DisplayFor(c => card.Type)
                </th>
                <th class="showth">
                    @Html.DisplayFor(c => card.Mana)
                </th>
                <th class="showth">
                    @Html.DisplayFor(c => card.Attack)
                </th>
                <th class="showth">
                    @Html.DisplayFor(c => card.Life)
                </th>
            </tr>
        }
    </table>
</div>
