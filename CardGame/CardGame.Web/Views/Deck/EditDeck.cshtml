                                    </button>
                                    <ul class="dropdown-menu" style="background-color:transparent">
                                        <li style="background-color:transparent">@Html.ActionLink("Aufsteigend", "EditDeck", new { SortValue = 1 }, new { @class = "btn dropdown-toggle" })</li>
                                        <li style="background-color:transparent">@Html.ActionLink("Absteigend", "EditDeck", new { SortValue = 2 }, new { @class = "btn dropdown-toggle" })</li>
                                    </ul>
                                </div>
