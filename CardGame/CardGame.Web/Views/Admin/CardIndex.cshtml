@model IEnumerable<CardGame.Web.Models.Card>

@{
    ViewBag.Title = "ADMIN-All Cards";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="panel panel-default" style="background-color:transparent;background:fixed;max-width:100%;min-height:62em;">
    <div class="panel-heading" style="background-color:darkgrey;">
        <h2>Alle Karten</h2>
        <center><h3>@Html.ActionLink("Neue Karte hinzufügen", "CardCreate", new { @class = "btn btn-default" })</h3></center>
</div>
    <center>
        <div class="panel-body"style="margin-left:-5em">
            <table class="table-hover table-condensed table-bordered">
                <tr>
                    <th class="text-right">Nummer</th>
                    <th>Name</th>
                    <th>Aktiv</th>
                    <th class="text-right">Typ</th>
                    <th class="text-right">InfoText</th>
                    <th class="text-center">Mana</th>
                    <th class="text-center">Attack</th>
                    <th class="text-center">Life</th>
                    <th class="text-center">Action</th>

                </tr>
                @foreach (var card in Model)
                {
                    <tr>
                        <td class="text-right">@card.ID</td>

                        <td><h6>@Html.ActionLink(card.Name, "CardEdit", new { id = card.ID })</h6></td>
                        <td class="text-right">@Html.CheckBoxFor(p => card.IsActive, new { @disabled = "disabled" })</td>
                        <td class="text-right">@card.Type</td>
                        <td class="text-right">@card.Flavor</td>
                        <td class="text-center">@card.Mana</td>
                        <td class="text-center">@card.Attack</td>
                        <td class="text-center">@card.Life</td>
                        
                        @using (Html.BeginForm("SetCardInActive","Admin"))
                        {
                            <td>
                                @Html.Hidden("id", card.ID)
                                <input type="submit" class="btn btn-default btn-xs" value="Löschen" />
                            </td>
                        }
                    </tr>
                }
            </table>

        </div>
    </center>
    <div class="panel-footer" style="background-color:darkgrey">
        <center><h3>@Html.ActionLink("Neue Karte hinzufügen", "CardCreate", new { @class = "btn btn-default" })</h3></center>
    </div>

</div>
