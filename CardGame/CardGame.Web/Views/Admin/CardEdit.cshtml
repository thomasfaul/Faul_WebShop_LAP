@model CardGame.Web.Models.Card


@{
    ViewBag.Title = "Admin: CardEdit" + @Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Karte bearbeiten</h2>

<div class="panel" style="background-color:transparent;background:fixed;max-width:50%;min-height:62em;margin-left:25%">
    <div class="panel-heading" style="background-color:darkgrey">
        <h3>Bearbeite @Model.Name</h3>
    </div>

    @using (Html.BeginForm("CardEdit", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="panel-body">
            @Html.HiddenFor(c => c.ID)
            @foreach (var property in ViewData.ModelMetadata.Properties)
                {
                    switch (property.PropertyName)
                    {
                        case "ID":
                        case "Pic":
                        case "ImageMimeType":
                            break;
                        default:
                        <div class="form-group">
                            <label>@(property.DisplayName ?? property.PropertyName)</label>
                            @if (property.PropertyName == "Flavor")
                            {
                                @Html.TextArea(property.PropertyName, null, new { @class = "form-control", rows = 3 })
                            }
                            else if (property.PropertyName == "IsActive")
                            {
                                @Html.CheckBox(property.PropertyName)
                            }

                            else
                            {
                                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
                            }
                            @Html.ValidationMessage(property.PropertyName)
                        </div>
                        break;

                }
            }
            <div class="form-group">
                <div style="position:relative;">
                    <label>Bild</label>
                    <a class='btn' style="margin-left:20em;" href='javascript:;'>
                        Wähle Bild aus...
                        <input type="file" id="img" name="img" size="40" style="position:absolute;z-index:2;top:0;left:0;filter:alpha(opacity=0);opacity:0;background-color:transparent;" onchange='$("#upload-file-info").html($(this).val());' />
                    </a>
                    <span class='label label-info' id="upload-file-info"></span>
                </div>

                @Html.Partial("_ShowCardImageR", @Model)

            </div>
        </div>
        <div class="panel-footer" style="background-color:darkgrey">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Zurücksetzen", "CardIndex", null, new { @class = "btn btn-default" })

        </div>
    }
</div>

