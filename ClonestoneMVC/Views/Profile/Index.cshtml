@model IEnumerable<ClonestoneMVC.Models.tbllogin>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" id="ProfileList">
    <p>
        <h3>User Administration</h3>
        <br />
        @Html.ActionLink("Create New User", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblperson.gamertag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblperson.firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tblperson.lastname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblperson.gamertag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tblperson.firstname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.tblperson.lastname)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idlogin }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idlogin })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Home", "Index", "Home")
</div>
